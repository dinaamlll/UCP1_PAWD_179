<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Dokter</title>
</head>
<body>
  <h1>Daftar Dokter</h1>
  <a href="/doctors/add">Tambah Dokter</a>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nama</th>
        <th>No HP</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% doctors.forEach(doctor => { %>
        <tr>
          <td><%= doctor.id %></td>
          <td><%= doctor.nama %></td>
          <td><%= doctor.nohp %></td>
          <td>
            <a href="/doctors/edit/<%= doctor.id %>">Edit</a>
            <form action="/doctors/delete/<%= doctor.id %>" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
